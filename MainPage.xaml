<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#212121"
             x:Class="NumiX.MainPage">

    <Grid RowSpacing="5" 
          ColumnSpacing="0"
          Padding="5">
        <!-- Define the page layout with two rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Entry Section -->
            <RowDefinition Height="auto" />
            <!-- Grid Section -->
        </Grid.RowDefinitions>

        <!-- Entry at the top -->
        <Grid Grid.Row="0" 
            BackgroundColor="#333"
            Padding="10"
            ColumnSpacing="10"
            VerticalOptions="FillAndExpand"
            HorizontalOptions="FillAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Query Label -->
            <Label x:Name="QueryLabel"
                Grid.Row="0"
                FontSize="24"
                HorizontalOptions="End"
                VerticalOptions="Start"
                TextColor="LightGray"
                Text=""/>

            <!-- Result Label -->
            <Label x:Name="ResultLabel"
                Grid.Row="1"
                FontSize="24"
                HorizontalOptions="End"
                VerticalOptions="End"
                TextColor="GhostWhite"
                Text=""/>
        </Grid>


        <!-- Grid fixed at the bottom -->
        <Grid Grid.Row="1"
              ColumnSpacing="5"
              RowSpacing="5"
              VerticalOptions="End"
              HorizontalOptions="FillAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Row 0 -->
            <Button Text="C"
                    Grid.Row="0" Grid.Column="0"
                    BackgroundColor="DarkGray"
                    TextColor="White"
                    FontSize="20"
                    Clicked="OnClearClicked"/>
            <Button Text="±"
                    Grid.Row="0" Grid.Column="1"
                    BackgroundColor="DarkGray"
                    TextColor="White"
                    FontSize="20"
                    Clicked="OnNegateClicked"/>
            <Button Text="%"
                    Grid.Row="0" Grid.Column="2"
                    BackgroundColor="DarkGray"
                    TextColor="White"
                    FontSize="20"
                    Clicked="OnPercentClicked"/>
            <Button Text="÷"
                    Grid.Row="0" Grid.Column="3"
                    BackgroundColor="Orange"
                    TextColor="White"
                    FontSize="20"
                    Clicked="OnOperatorClicked"/>

            <!-- Additional Rows for Numbers and Operators -->
            <Button Text="7"
                    Grid.Row="1" Grid.Column="0"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    FontSize="20"
                    Clicked="OnNumberClicked"/>
            <Button Text="8"
                    Grid.Row="1" Grid.Column="1"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    FontSize="20"
                    Clicked="OnNumberClicked"/>
            <Button Text="9"
                    Grid.Row="1" Grid.Column="2"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    FontSize="20"
                    Clicked="OnNumberClicked"/>
            <Button Text="×"
                    Grid.Row="1" Grid.Column="3"
                    BackgroundColor="Orange"
                    TextColor="White"
                    FontSize="20"
                    Clicked="OnOperatorClicked"/>

            <Button Text="4"
                    Grid.Row="2" Grid.Column="0"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    FontSize="20"
                    Clicked="OnNumberClicked"/>
            <Button Text="5"
                    Grid.Row="2" Grid.Column="1"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    FontSize="20"
                    Clicked="OnNumberClicked"/>
            <Button Text="6"
                    Grid.Row="2" Grid.Column="2"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    FontSize="20"
                    Clicked="OnNumberClicked"/>
            <Button Text="-"
                    Grid.Row="2" Grid.Column="3"
                    BackgroundColor="Orange"
                    TextColor="White"
                    FontSize="20"
                    Clicked="OnOperatorClicked"/>

            <Button Text="1"
                    Grid.Row="3" Grid.Column="0"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    FontSize="20"
                    Clicked="OnNumberClicked"/>
            <Button Text="2"
                    Grid.Row="3" Grid.Column="1"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    FontSize="20"
                    Clicked="OnNumberClicked"/>
            <Button Text="3"
                    Grid.Row="3" Grid.Column="2"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    FontSize="20"
                    Clicked="OnNumberClicked"/>
            <Button Text="+"
                    Grid.Row="3" Grid.Column="3"
                    BackgroundColor="Orange"
                    TextColor="White"
                    FontSize="20"
                    Clicked="OnOperatorClicked"/>

            <Button Text="0"
                    Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    FontSize="20"
                    Clicked="OnNumberClicked"/>
            <Button Text="."
                    Grid.Row="4" Grid.Column="2"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    FontSize="20"
                    Clicked="OnDecimalClicked"/>
            <Button Text="="
                    Grid.Row="4" Grid.Column="3"
                    BackgroundColor="Orange"
                    TextColor="White"
                    FontSize="20"
                    Clicked="OnEqualsClicked"/>
        </Grid>
    </Grid>
</ContentPage>


